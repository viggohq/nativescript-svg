<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:svg="@viggohq/nativescript-svg" navigatingTo="onNavigatingTo">
    <StackLayout>
        <Label text="Tap the button" class="title"/>
        <Button text="TAP" tap="{{ onTap }}" />
        <Label text="{{ message }}" class="message" textWrap="true"/>
        <Label text="{{ message2 }}" class="message" textWrap="true"/>
        <svg:SVGImage src="~/images/nativescript.svg" />
        <svg:SVGImage src="~/images/spider.svg" height="250" width="250" />
    </StackLayout>
</Page>